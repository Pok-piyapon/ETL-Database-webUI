# Source Database
SRC_DB_HOST=
SRC_DB_PORT=3306
SRC_DB_NAME=my_database
# หรือใช้ LATEST: เพื่อหา database ล่าสุดอัตโนมัติ
# SRC_DB_NAME=LATEST:smartmedkku_*
# SRC_DB_NAME=LATEST:backup_*
SRC_DB_USER=
SRC_DB_PASSWORD=

# Destination Database
DST_DB_HOST=host.docker.internal
DST_DB_PORT=3306
DST_DB_NAME=backup_{YYYY}_{MM}_{DD}
DST_DB_DYNAMIC=false           # true = create new DB each run with date/time
DST_DB_USER=
DST_DB_PASSWORD=

# Table Filtering (comma-separated)
INCLUDE_TABLES=
EXCLUDE_TABLES=

# ETL Configuration
LOG_LEVEL=INFO
MAX_WORKERS=20              # Conservative for stability
BATCH_SIZE=5000             # Smaller batch for reliability

# Dynamic Performance Tuning (DISABLED - use fixed config)
MAX_TABLE_TIME_SECONDS=0    # 0 = no time limit, just complete all tables
MIN_BATCH_SIZE=5000
MAX_BATCH_SIZE=10000        # Smaller max for stability

ETL_INTERVAL_SECONDS=300

# REDCap Integration (Optional)
REDCAP_ENABLED=false
REDCAP_API_URL=https://your-redcap-server.com/api/
REDCAP_API_TOKEN=YOUR_API_TOKEN_HERE
REDCAP_TABLE_NAME=redcap_data
