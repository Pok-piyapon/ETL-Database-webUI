# MariaDB source (extract)
SRC_DB_HOST=mariadb-src
SRC_DB_PORT=3306
SRC_DB_NAME=src_db
SRC_DB_USER=src_user
SRC_DB_PASSWORD=src_password

# MariaDB destination (load)
DST_DB_HOST=mariadb-dst
DST_DB_PORT=3306
DST_DB_NAME=dst_db
DST_DB_USER=dst_user
DST_DB_PASSWORD=dst_password

# Optional: table include/exclude (comma-separated, case-sensitive)
INCLUDE_TABLES=
EXCLUDE_TABLES=

# ETL Configuration
LOG_LEVEL=INFO
BATCH_SIZE=10000
MAX_WORKERS=20
MAX_CONCURRENT_CHUNKS=5

# Optional: ETL loop mode (0=run once, >0=loop with interval in seconds)
ETL_INTERVAL_SECONDS=0
